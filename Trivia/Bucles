y = 0
while y <= 10:
  if y == 3:
    print("BOOOM")
  else:
    print(y)
  y = y+1


x = int(input("Ingrese el numero de filas: "))
y = 1
while y <= x:
    z = 1
  #z=1#y=3
    while z <= y:
        print("+", end = " ")
        z = z + 1
    print(" ")
    y = y + 1




x = int(input("Ingrese las cantidad de veces que se repetira: "))
i=0
j=0
for i in range(i,x+1):
  for j in range(0,i):
    print("x",end=" ")
  print(" ")